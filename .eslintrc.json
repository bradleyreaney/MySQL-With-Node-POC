{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
    "comma-dangle": "off",
    "complexity": ["warn", 20],
    "curly": ["error", "multi-line"],
    "eol-last": "error",
    "eqeqeq": "off",
    "func-call-spacing": ["error", "never"],
    "indent": ["error", 4, {"SwitchCase": 1}],
    "max-len": ["warn", 120, 4],
    "max-params": ["warn", 7],
    "max-statements": ["warn", 30],
    "no-console": "error",
    "no-else-return": "warn",
    "no-eq-null": "warn",
    "no-floating-decimal": "warn",
    "no-lonely-if": "warn",
    "no-nested-ternary": "warn",
    "no-path-concat": "off",
    "no-trailing-spaces": "error",
    "no-unused-vars": ["error", { "vars": "all", "args": "after-used" }],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", {
      "asyncArrow": "always",
      "anonymous": "never",
      "named": "never"
    }],
    "spaced-comment": ["warn", "always"],
    "strict": ["error", "global"]
  }
}
